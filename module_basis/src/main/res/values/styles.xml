<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="dialogAnim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_push_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_push_out</item>
    </style>

    <style name="FragmentDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_push_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_push_out</item>
    </style>

    <style name="PopupWindowAnimStyle">
        <item name="android:windowEnterAnimation">@anim/popup_show</item>
        <item name="android:windowExitAnimation">@anim/popup_gone</item>
    </style>

    <declare-styleable name="VisualizerView">
        <attr name="spaceNum" format="integer"/>
        <attr name="spaceWidth" format="reference|dimension"/>
        <attr name="lineColor" format="reference|color"/>
        <attr name="lineWidth" format="reference|dimension"/>
        <attr name="baseHeight" format="reference|dimension"/>
        <attr name="lineIsSingleColor" format="boolean"/>
        <attr name="firstPartColor" format="reference|color"/>
        <attr name="secondPartColor" format="reference|color"/>
        <attr name="thirdPartColor" format="reference|color"/>
        <attr name="fourthPartColor" format="reference|color"/>
    </declare-styleable>


</resources>
