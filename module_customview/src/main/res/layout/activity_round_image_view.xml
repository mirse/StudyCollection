<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".myview.imageview.RoundImageViewActivity">

    <com.wdz.module_customview.myview.imageview.RoundImageView
        app:type="circle"
        app:topRightRadius="5dp"
        app:topLeftRadius="5dp"
        app:bottomRightRadius="5dp"
        app:bottomLeftRadius="5dp"
        app:frameWidth="5dp"
        app:frameColor="@color/red_deep"
        android:background="@color/transparent"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@mipmap/bg_adddevice"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>