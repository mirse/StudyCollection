<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ColorPickerRingRGB">
        <attr name="circle_width" format="dimension"/>
        <attr name="point_width" format="dimension"/>
        <attr name="circle_thick" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="ColorPickerHSV">
        <attr name="color_rad" format="dimension"/>
        <attr name="inner_rad" format="dimension"/>
    </declare-styleable>
    <!--自定义ViewGroup-->
    <declare-styleable name="TabGroup">
        <attr name="tab_text" format="string"/>
        <attr name="tab_image" format="reference"/>
    </declare-styleable>


    <!--带角标的imageview-->
    <declare-styleable name="ViewWithIcon">
        <attr name="view_image" format="reference"/>
        <attr name="icon_num" format="integer"/>
    </declare-styleable>


    //指示器
    <declare-styleable name="MyIndicatorView">
        <attr name="indicator_rad" format="dimension"/>
        <attr name="indicator_border_width" format="dimension"/>
        <attr name="indicator_space" format="dimension"/>
        <attr name="indicator_text_color" format="color"/>
        <attr name="indicator_select_color" format="color"/>
        <attr name="indicator_normal_color" format="color"/>
        <attr name="enableIndicatorSwitch" format="boolean"/>
        <attr name="fill_mode" format="integer"/>
    </declare-styleable>

    <declare-styleable name="ShadowCardView">
        <attr name="cornersRadius" format="dimension"/>
        <attr name="shadowLeftHeight" format="dimension"/>
        <attr name="shadowTopHeight" format="dimension"/>
        <attr name="shadowRightHeight" format="dimension"/>
        <attr name="shadowBottomHeight" format="dimension"/>
        <attr name="shadowOffsetX" format="dimension"/>
        <attr name="shadowOffsetY" format="dimension"/>
        <attr name="cardColor" format="color"/>
        <attr name="shadowColor" format="color"/>
        <attr name="shadowRadius" format="integer"/>

        <attr name="src" format="integer"/>
    </declare-styleable>

    <declare-styleable name="RoundImageView">
        <attr name="topLeftRadius" format="dimension"/>
        <attr name="topRightRadius" format="dimension"/>
        <attr name="bottomLeftRadius" format="dimension"/>
        <attr name="bottomRightRadius" format="dimension"/>
        <attr name="frameWidth" format="dimension"/>
        <attr name="frameColor" format="color"/>
        <attr name="type">
            <enum name="circle" value="0" />
            <enum name="roundRect" value="1" />
        </attr>
    </declare-styleable>


    <declare-styleable name="LineChartView">
        <attr name="textColor" format="color"/>
        <attr name="lineColor" format="color"/>
        <attr name="circleColor" format="color"/>
        <attr name="errorCircleColor" format="color"/>

    </declare-styleable>

    <declare-styleable name="CommonTitleBar">
        <!--    背景    -->
        <attr name="background_color" format="color"/>
        <!--    标题       -->
        <attr name="title" format="string"/>
        <!--    标题颜色     -->
        <attr name="title_color" format="color"/>
        <!--    标题文字大小   -->
        <attr name="title_size" format="dimension"/>
        <!--    标题样式    -->
        <attr name="title_style">
            <enum name="normal" value="0" />
            <enum name="bold" value="1" />
        </attr>
        <!--    图标      -->
        <attr name="icon_back" format="reference"/>
        <attr name="icon_left" format="reference"/>
        <attr name="icon_right" format="reference"/>
        <attr name="icon_close" format="reference"/>

    </declare-styleable>

</resources>