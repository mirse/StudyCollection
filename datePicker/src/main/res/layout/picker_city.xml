<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#F2F2F6"
        android:orientation="horizontal">

      <TextView
          android:textStyle="bold"
          android:textSize="15sp"
          android:textColor="#333333"
          android:gravity="center"
          android:text="取消"
          android:id="@+id/iv_cancel"
          android:layout_alignParentLeft="true"
          android:src="@mipmap/ic_close"
          android:layout_width="44dp"
          android:layout_height="44dp" />


        
        <TextView
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#333333"
            android:gravity="center"
            android:text="确定"
            android:id="@+id/iv_confirm"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_save"
            android:layout_width="44dp"
            android:layout_height="44dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/date_picker_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"

        >


        <com.wdz.mychoosedialog.datepicker.base.CityPickerView
            android:id="@+id/dpv_province"
            android:layout_width="0dp"
            android:layout_height="@dimen/picker_view_height"
            android:layout_weight="1" />

        <com.wdz.mychoosedialog.datepicker.base.CityPickerView
            android:id="@+id/dpv_city"
            android:layout_width="0dp"
            android:layout_height="@dimen/picker_view_height"
            android:layout_weight="1" />

        <com.wdz.mychoosedialog.datepicker.base.CityPickerView
            android:id="@+id/dpv_district"
            android:layout_width="0dp"
            android:layout_height="@dimen/picker_view_height"
            android:layout_weight="1" />


    </LinearLayout>


</LinearLayout>